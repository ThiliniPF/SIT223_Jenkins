pipeline
{
    agent any
    stages
    {
        stage('Build')
        {
            steps
            {
                sh 'mvn clean package'
            }
        }
        stage('Unit and Integration Tests')
        {
            steps
            {
                sh 'mvn test'
                sh 'mvn integration-test'
            }
        }
        stage('Code Analysis')
        {
            steps
            {
                withMaven(
                    maven: '1298.v43b_82f220a_e9'
                    mvn: 'clean verify sonar:sonar'
                )  
            }
        }
    }
}
